{
  "name": "osc-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node --env-file=.env dist/server.js || npm run show-hint",
    "dev": "tsx watch --env-file=.env src/server.ts || npm run show-hint",
    "show-hint": "echo \"\nFailed to start. Check the following:\n - You have the required env vars in /.env\n - You have run db migrations\n - You ran 'npm i' to install deps\n - You ran 'npm run build' to generate code\n\"",
    "test": "tsx --test $(find . -wholename \"./tests/**/*.test.ts\")",
    "test:watch": "tsx --test --watch $(find . -wholename \"./tests/**/*.test.ts\")",
    "lint": "eslint --fix --ext 'js,ts,jsx,tsx' .",
    "format": "prettier -w **/* -l",
    "type-check": "tsc --noEmit",
    "compile": "tsc --build --verbose",
    "clean": "rimraf dist",
    "build:ts": "npm run lint && npm run format && npm run compile",
    "build:no-test": "npm run clean && npm run build:ts",
    "build": "npm run test && npm run build:no-test"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-base-typescript": "^1.1.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-unicorn": "^56.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "rimraf": "^4.0.0"
  }
}
